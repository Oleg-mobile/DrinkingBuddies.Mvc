@using DrinkingBuddies.Mvc.ViewModels.Common;
@model MessageViewModel

<div class="card">

    @if (Model != null && Model.ViewMessage != null)
    {
        <span class="message">
            @Model.ViewMessage;
        </span>
    }

    <div class="home">
        <label class="home__label">Третьим будешь?</label>
        <form asp-controller="Home" asp-action="Inter" method="post">
            <div>
                <button type="submit" class="btn">Да</button>
            </div>
        </form>
    </div>
</div>